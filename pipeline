pipeline {
    agent any
    stages {
        stage ('pull code') {
            steps {
                sh 'ls'
                git credentialsId: 'github', url: 'https://github.com/shashirajraja/onlinebookstore.git'
                
            }
        }
        
	stage ('build code') {
            steps {
                sh 'echo "build code successfully"'
                sh 'sudo apt-get install maven -y'
                sh 'mvn clean'
                sh 'mvn package'
    }
        }
        stage ('test code') {

            steps {
                withSonarQubeEnv('sonarqube') {
                    sh 'mvn clean verify sonar:sonar -Dsonar.projectkey=onlinebookstore -Dsonar.host.url=http://3.92.193.191:9000/ -Dsonar.login=sqa_9edb54f6fd3007805e9b2a3664241d6b07a3cd2b'
                }
                sh 'echo "test code successfully"'
              
            }
        }
        stage ('deploy code') {

            steps {
                
                sh 'echo "deploy code successfully"'
            }
        }
    }
}
     


